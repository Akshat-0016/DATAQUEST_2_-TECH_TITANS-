{
  "manifest_version": 3,
  "name": "Sensitive Data Detector",
  "version": "1.0",
  "description": "Detects sensitive data (emails, credit cards, phone numbers, SSN) in Gmail or text fields.",
  "permissions": ["scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Sensitive Data Detector"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}