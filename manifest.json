{
  "manifest_version": 3,
  "name": "Sensitive Data Detector",
  "version": "1.0",
  "description": "Detects and warns about sensitive data typed into input fields.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://127.0.0.1:5000/*"],
  "background": { 
    "service_worker": "background.js" 
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Sensitive Detector"
  }
}
